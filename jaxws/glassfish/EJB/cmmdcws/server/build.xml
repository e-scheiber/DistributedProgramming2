<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="generate.ejb" name="jaxws">
    <!--<property environment="env"/> -->
    <property name="GLASSFISH_HOME" location="e:/JavaApp/glassfish5"/>
    <property name="build.dir" value="build"/>
    <property name="dist.dir" value="dist"/>
    <property name="dist.name" value="ejbcmmdcws" />
    
    <path id="myclasspath">
      <fileset dir="${GLASSFISH_HOME}/glassfish/modules" >
          <include name="*.jar" />
      </fileset>
    </path>
    
    <target name="init">
      <delete dir="${build.dir}"/>
      <mkdir dir="${build.dir}"/>
      <delete dir="${dist.dir}"/>
      <mkdir dir="${dist.dir}"/>
    </target>

    <target name="build-server" depends="init">
      <javac classpathref="myclasspath"
           includeantruntime="false"
           srcdir="src" 
           destdir="${build.dir}" />  
    </target>
     
    <target name="generate.ejb" depends="build-server">
       <jar destfile="${dist.dir}/${dist.name}.jar" basedir="${build.dir}" /> 
    </target>       
</project>
